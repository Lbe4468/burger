<div class="row">
	<div class="col-sm">
		<img src="https://i.pinimg.com/736x/27/b6/fd/27b6fd380a9a43f742508a1d18bf67ee--down-under-homemade-burgers.jpg" width="175"
		 height="175">
	</div>
	<div class="col-sm">
		<h1>Eat-Da-Burger!</h1>
	</div>
	<div class="col-sm">
		<img src="https://i.pinimg.com/736x/27/b6/fd/27b6fd380a9a43f742508a1d18bf67ee--down-under-homemade-burgers.jpg" width="175"
		 height="175">
	</div>
	<div id="img2"></div>
</div>
<main>
	<div class="container">
		<div class="row">
			<div class="col s6">
				<h2>Ready to Eat</h2>
				{{#each burgers}} {{#unless this.devoured}}
				<div>
					<form action="/burgers/{{this.id}}?_method=PUT" method="POST">
						<button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
					</form>
				</div>
				{{/unless}} {{/each}}
			</div>

			<div class="col s6">
				<h2>Burgers Devoured</h2>
				{{#each burgers}} {{#if this.devoured}}
				<div class='burgerEaten'>
					<div>
						{{this.burger_name}}
					</div>
				</div>
				{{/if}} {{/each}}
			</div>
		</div>
	</div>
</main>

<h2>Add A Burger Option</h2>

<div class="row">
	<div class="col s12">
		<form action="/burgers" method="POST">
			<input type="text" id="name" name="burger_name" placeholder="Enter Burger Type">
			<button type="submit" class="addBurgerButton">Add The Burger</button>
		</form>
	</div>
</div>